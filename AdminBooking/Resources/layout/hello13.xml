<?xml version="1.0" encoding="utf-8"?> 
 
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<ScrollView  
    android:id="@+id/scroll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"> 
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px">
        <!-- Прогресс -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:text="65%"
                style="@style/text_progress_bar"
                android:textColor="#11142D"/>
            <TextView
                android:text="Уже заполнено"
                style="@style/text_progress_bar"
                android:textColor="#828282"/>
        </LinearLayout>
        <ImageView
            android:src="@drawable/six"
            style="@style/progress"/>
        <TextView
            android:text="+35% за личную информацию"
            style="@style/text_progress_bar"
            android:layout_marginBottom="100dp"
            android:textColor="#828282"/>
        <!-- Заголовок: Татьяна -->
        <!-- Прогресс -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Татьяна ,"
                android:id="@+id/textView1"
                style="@style/head_add_user1"
                android:textColor="#11142D"  />
        
        </LinearLayout> 
        <!-- Текст 2 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="*Осталось заполнить данные сотрудника до использования всего функционала нашей системы!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textFontWeight="500"
                android:textSize="16sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" /> 
        </LinearLayout>
        <!-- Текст 3 -->
        <TextView
            android:text="OCPIO упростит ведение бизнеса и сэкономит ваше время"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textFontWeight="500"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp" /> 
        <!-- Кнопка начать -->
        <android.support.v7.widget.CardView 
            style="@style/button_next"
            app:cardBackgroundColor="#008E52"
            android:id="@+id/cardView1"
            android:layout_height="40dp"
            app:cardCornerRadius="50dp">
            <!-- Текст внутри -->
            <TextView
                android:layout_width="wrap_content"
                android:text="Перейти к работе"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"  
                android:textColor="#fff" 
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView> 
        </LinearLayout>
 
</ScrollView>  
  
    </RelativeLayout>
