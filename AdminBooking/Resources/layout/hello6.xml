<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">  
    <!-- Стрелка -->
    <ImageView
        android:src="@drawable/left" 
        android:layout_height="18dp"
        android:layout_width="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"/> 
    <TextView 
        android:layout_height="wrap_content"  
        android:layout_width="match_parent"
        android:text="Мы отправили вам СМС кодом"            
        android:textFontWeight="600"
        android:fontFamily="monospace"
        android:textSize="24sp"
        android:textColor="#11142D" 
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:lineHeight="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="на номер: "
            android:textSize="16sp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/textView1"
            android:textColor="@color/colorPrimary"
            android:text="+7 (923) 820 - 90 - 00" />
    </LinearLayout>
   
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <!--Квадрат 1 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:elevation="3dp"
            android:layout_marginTop="30px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="10px" 
            android:layout_gravity="center"> 
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_gravity="center"
                android:id="@+id/editText1"
                 android:inputType="numberDecimal"
                android:hint="0"
                 /> 
         </com.google.android.material.card.MaterialCardView>
        <!--Квадрат 2 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:elevation="3dp"
            android:layout_marginTop="30px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="10px" 
            android:layout_gravity="center"> 
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_gravity="center"
                  android:id="@+id/editText2"
                android:inputType="numberDecimal"
                android:hint="0"/> 
         </com.google.android.material.card.MaterialCardView>
        <!--Квадрат 3 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:elevation="3dp"
            android:layout_marginTop="30px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="10px" 
            android:layout_gravity="center"> 
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_gravity="center"
                  android:id="@+id/editText3"
                 android:inputType="numberDecimal"
                android:hint="0"/> 
         </com.google.android.material.card.MaterialCardView> 
        <!--Квадрат 4 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:elevation="3dp"
            android:layout_marginTop="30px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="10px" 
            android:layout_gravity="center"> 
            <EditText
                  android:id="@+id/editText4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" 
                 android:layout_gravity="center"
                 android:inputType="numberDecimal"
                 android:hint="0"/> 
         </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:textColor="#ff0000"
        android:id="@+id/textView2"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:layout_marginTop="20dp">
        <!-- Чек-бокс -->
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/checkBox1"
            android:layout_height="wrap_content"/>        
        <!-- Текст:описание -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="400"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp" 
            android:text="Согласен с правилами и условиями"
            /> 
    </LinearLayout> 
    <!-- Не пришел код -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Не пришёл код? "
            android:textSize="16sp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:text="Прислать повторно" />
    </LinearLayout> 
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">
    <!-- Кнопка начать -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp" 
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            app:cardBackgroundColor="#DDE2ED"
            app:cardCornerRadius="50dp" >
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">
                <!-- Текст внутри -->
                <TextView   
                    android:layout_width="wrap_content" 
                    android:text="ДАЛЕЕ"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#fff"
                    android:layout_height="match_parent"/>
                <!-- Стрелка -->
                <ImageView
                    android:src="@drawable/right" 
                    android:layout_height="18dp"
                    android:layout_width="18dp"  /> 
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>